CREATE TABLE COMMENTS (
     IDX NUMBER(8) 
    , CONSTRAINTS FK_IDX FOREIGN KEY(IDX) REFERENCES BOARD(IDX) 
    , USER_ID VARCHAR2(45)
    , CONSTRAINTS FK_USER_ID2 FOREIGN KEY(USER_ID) REFERENCES USER_INFO(USER_ID)
   ,  CONT VARCHAR2(1000) NOT NULL 
   ,  REGDATE DATE DEFAULT SYSDATE
);

